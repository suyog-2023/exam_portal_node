<%-include('nav.ejs')%>

<form action="/admin/save_test" method="post" enctype="multipart/form-data">
    <div class="container-fluid p-3 bg-white">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center mb-4">Create Test</h2>
            </div>
            <div class="col-md-6 mb-3">
                <label for="">Test Title</label>
                <input type="text" class="form-control" name="test_title" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="">Test Subject</label>
                <select name="subject_id" required class="form-control">
                    <option disabled selected value="">Select Subject</option>
                    <% for(i=0; i<subjects.length;i++) { %>
                        <option value="<%=subjects[i]['subject_id']%>"><%=subjects[i]['subject_name']%></option>
                    <% } %>
                </select>
            </div> 

            <div class="col-md-3 mb-3">
                <label for="">Test Image</label>
                <input type="file" name="test_image" class="form-control" required>
            </div>

            <div class="col-md-3 mb-3">
                <label for="">No. of Questions</label>
                <input type="number" class="form-control" id="no_of_questions" name="no_of_questions" value="50" onkeyup="total_marks.value=no_of_questions.value*mark_p_que.value" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="">Marks per Questions</label>
                <input type="number" class="form-control" id="mark_p_que" name="mark_p_que" value="2" onkeyup="total_marks.value=no_of_questions.value*mark_p_que.value">
            </div>
            <div class="col-md-3 mb-3">
                <label for="">Total Marks</label>
                <input type="number" class="form-control" readonly id="total_marks" name="total_marks" value="100" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="">Test Duration(Minutes)</label>
                <input type="number" class="form-control" name="test_duration" value="60" required>
            </div>
            <div class="col-md-12 mt-4 mb-3 text-right">
                <button class="btn btn-success">Create Test</button>
            </div>
        </div>
    </div>
</form>
<%-include('footer.ejs')%>