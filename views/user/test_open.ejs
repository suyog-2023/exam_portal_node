<!DOCTYPE html>
<html lang="en">

<head>
    <title>Node Exam</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
</head>
<body>



    <div class="bg-dark text-white p-2">
        <div class="container" style="font-size: 20px;">
            <div class="row">
                <div class="col-6">
                    Class Test
                </div>
                <div class="col-6 text-right" id="test_time">
                    <!-- <%=start_time%> -->
                </div>
            </div>
        </div>
    </div>
    <br>

    <h1>Test started ejs</h1>

    <form action="/submit_user_answer" method="post">
        <input type="hidden" name="user_test_question_id" value="<%=questions[0]['user_test_question_id']%>">

        <input type="hidden" name="user_test_id" value="<%=questions[0]['user_test_id']%>">

        <input type="hidden" name="question_id" value="<%=questions[0]['question_id']%>">
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-10">
                    <div style="font-size: 22px; background-color: rgb(223, 222, 222); border-radius: 30px;" class="p-3 pl-4">
                       <%=que_no%>. <b> <%=questions[0]['question']%> </b><br><br>
                        <label><input type="radio" name="provided_ans" value="a"> <%=questions[0]['option_a']%></label> 
                        <br>
                        <label><input type="radio" name="provided_ans" value="b"> <%=questions[0]['option_b']%></label> 
                        <br>
                        <label><input type="radio" name="provided_ans" value="c"> <%=questions[0]['option_c']%></label> 
                        <br>
                        <label><input type="radio" name="provided_ans" value="d"> <%=questions[0]['option_d']%></label> 
                        <br><br>

                        <div class="text-right mr-4">
                            <button class="btn bg-white ">Next Question</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <script>
        var time = parseInt(new Date().getTime() / 1000);
        ttl_time = 600 - (time - '<%=start_time%>');
        if (ttl_time <= 0) {
            location.href = "/result/<%=questions[0]['user_test_id']%>";
        }
        min = parseInt(ttl_time / 60);
        sec = parseInt(ttl_time % 60);
        $("#test_time").html(min + ":" + sec);
        console.log(600 - (time - '<%=start_time%>'));
        setInterval(function () {
            var time = parseInt(new Date().getTime() / 1000);
            ttl_time = 600 - (time - '<%=start_time%>');
            if (ttl_time <= 0) {
                location.href = "/result/<%=questions[0]['user_test_id']%>";
            }
            min = parseInt(ttl_time / 60);
            sec = parseInt(ttl_time % 60);
            $("#test_time").html(min + ":" + sec);
            console.log(600 - (time - '<%=start_time%>'));
        }, 1000);
    </script>

<%- include("footer.ejs")%>